{
    "name" : "Timer Extension",
    "manifest_version" : 2,
    "version" : "1.3.2",
    "description" : "An extension designed for timer",

    "browser_action" : {
        "default_icon" : "./assests/icon.png",
        "default_popup": "popup.html"
    },
    "permissions": ["tabs"],

    "background" : {
        "scripts" : ["src/background.js"],
        "persistent": true
    },
    "web_accessible_resources": [
        "./assests/alarm.mp3"
    ]
  }